# Map Super+t to send Ctrl+a then c
keybind = super+t=text:\x01c

# Map Super+w to send Ctrl+a then w
keybind = super+w=text:\x01w

# resize
keybind = super+shift+h=text:\x01H
keybind = super+shift+j=text:\x01J
keybind = super+shift+k=text:\x01K
keybind = super+shift+l=text:\x01L

# splits 
keybind = super+d=text:\x01v
keybind = super+shift+d=text:\x01s

# Number keys
